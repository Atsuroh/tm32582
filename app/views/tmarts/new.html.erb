</header>
<div class="items-sell-main">
  <h2 class="items-sell-title">商品の情報を入力</h2>
  <%= form_with(model: @tmart, local: true) do |f| %>

  <%# インスタンスを渡して、エラー発生時にメッセージを表示%>

  <%# 画像 %>
  <div class="img-upload">
    <div class="weight-bold-text">
      画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <p>
        クリックしてファイルをアップロード
      </p>
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>
  <%# /画像 %>
  <%# 商品名と商品説明 %>
  <div class="new-items">
    <div class="weight-bold-text">
      商品名
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :product_name, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
  </div>
  <%# /商品名と商品説明 %>

  <%# 商品の詳細 %>
  <div class="items-detail">
    <div class="weight-bold-text">商品の種類</div>
    <div class="form">
      <div class="weight-bold-text">
        カテゴリー
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <div class="weight-bold-text">
        値下げ理由
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:disposal_id, Disposal.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
    </div>
  </div>
  <div class="items-explain">
      <div class="weight-bold-text">
        備考欄
      </div>
      <%= f.text_area :text, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
    </div>
  <%# /商品の詳細 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">消費期限</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :deadline,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
  <%# 配送について %>
  <div class="items-detail">
    <div class="weight-bold-text question-text">
    </div>
    <div class="form">
      <div class="weight-bold-text">
        店舗名
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:store_id, Store.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
    </div>
  </div>
  <%# /配送について %>
  <div class="price-content">
    <div class="price-text">
      <span>個数</span>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :count, class:"price-input", id:"item-price", placeholder:"例）300" %>
    <span class="sell-yen">個</span>
  </div>
  <%# 販売価格 %>
  <div class="sell-price">
    <div class="weight-bold-text question-text">
      <span>価格<br>(¥300〜9,999,999)</span>
      <a class="question" href="#">?</a>
    </div>
    <div>
      <div class="price-content">
        <div class="price-text">
          <span>販売価格</span>
          <span class="indispensable">必須</span>
        </div>
        <span class="sell-yen">¥</span>
        <%= f.text_field :before_price, class:"price-input", id:"item-price", placeholder:"例）300" %>
      </div>
      <div class="price-content">
        <div class="price-text">
          <span>割引価格</span>
          <span class="indispensable">必須</span>
        </div>
        <span class="sell-yen">¥</span>
        <%= f.text_field :after_price, class:"price-input", id:"item-price", placeholder:"例）300" %>
      </div>
    </div>
  </div>
  <%# /販売価格 %>
  <%# 下部ボタン %>
  <div class="sell-btn-contents">
    <%= f.submit "出品する" ,class:"sell-btn" %>
    <%=link_to 'もどる', tmarts_path, class:"back-btn" %>
  </div>
  <%# /下部ボタン %>
</div>
<% end %>